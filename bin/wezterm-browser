#!/bin/sh

__wezterm_set_user_var () {
    if hash base64 2> /dev/null
    then
        if [[ -z "${TMUX}" ]]
        then
            printf "\033]1337;SetUserVar=%s=%s\007" "$1" `echo -n "$2" | base64`
        else
            printf "\033Ptmux;\033\033]1337;SetUserVar=%s=%s\007\033\\" "$1" `echo -n "$2" | base64`
        fi
    fi
}

_pid=$$
while ! lsof -p $_pid -a -d 0 -Fn | grep -E "n/dev/(pts|tty)" > /dev/null; do
    _pid=$(lsof -p 54423 -a -d 0 -FR | perl -n -e '/^R([0-9]+)/ and print $+')
    [[ "$_pid" == "0" ]] && break
done
_tty=$(lsof -p $_pid -a -d 0 -Fn | perl -n -e '/^n(.*)/ and print $+')

__wezterm_set_user_var __OPEN_URI $@ > $_tty

# vim: set ts=4 sw=4 et:
